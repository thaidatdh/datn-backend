<!-- 
Invoice dynamically rendered into html using handlebars and converted into pdf
using chrome-pdf recipe. The styles are extracted into separate asset for 
better readability and later reuse.

Data to this sample are mocked at the design time and should be filled on the 
incoming API request.
!-->

<html>

<head>
  <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
  <style>
    {{css}}
  </style>
  <script>
    window.JSREPORT_CHROME_PDF_OPTIONS = {
      landscape: false,
    }
  </script>
</head>

<body>
  <div style="margin: 20px">
    <table cellpadding="0" cellspacing="0" style="width: 100%;line-height: inherit;text-align: left;">
      <tr class="information ">
        <td colspan="3 ">
          <table style="width: 100%;line-height: inherit;text-align: left;">
            <tr>
              <td>
                {{practice.name}}<br>
                {{practice.address}}<br>
                Phone: {{practice.phone}}
              </td>
              <td>

              </td>
              <td style="text-align: right;">
                {{mode}} Report
                <br> Date: {{now}}
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
  <div style="text-align: center; margin-top: 20px; margin-bottom: 10px;">
    <h2 style="margin-bottom: 1px">Referral</h2>
    <h3 style="margin-top: 1px;">{{startDate}} - {{endDate}}</h3>
  </div>
  {{#if patient}}
  <div style="text-align: left; margin-left: 20px; margin-bottom: 10px;">
    <h3 style="margin-bottom: 5px; color:deepskyblue">{{patient.name}}</h3>
    <h4 style="margin-top: 5px; margin-bottom: 5px;">ID: {{patient.id}}</h4>
    {{#if patient.dob}}
      <h4 style="margin-top: 5px;">DOB: {{patient.dob}}</h4>
    {{/if}}
  </div>
  {{/if}}
  <div style="text-align: left; margin-left: 20px; margin-bottom: 10px;">
    <h4 style="margin-top: 5px; margin-bottom: 5px;">Referral By: {{statistic.referralBy}}</h4>
    {{#if statistic.referralTo}}
    <h4 style="margin-top: 5px; margin-bottom: 5px;">Referral To: {{statistic.referralTo}}</h4>
    {{/if}}
  </div>
  {{#if is_by_patient}}
    <div class="invoice-box">
      <table cellpadding="0" cellspacing="0">
        <tr class="heading ">
          <td colspan="1" style="text-align: left;">
            Date
          </td>
          <td style="text-align: center;">
            Patient ID
          </td>
          <td style="text-align: center;">
            Patient
          </td>
          <td style="text-align: center;">
            Referrer
          </td>
        </tr>
        {{#each items}}
        <tr class="item">
          <td colspan="1">
            {{referral_date}}
          </td>
          <td style="text-align: center;">
            {{patient_id}}
          </td>
          <td style="text-align: center;">
            {{patient_name}}
          </td>
          <td style="text-align: center;">
            {{ref_name}}
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  {{else if is_by_source}}
    <div class="invoice-box">
      <table cellpadding="0" cellspacing="0">
        <tr class="heading ">
          <td colspan="1" style="text-align: left;">
            Date
          </td>
          <td style="text-align: center;">
            Patient ID
          </td>
          <td style="text-align: center;">
            Patient
          </td>
          <td style="text-align: center;">
            Type
          </td>
        </tr>
        {{#each items}}
        <tr class="item">
          <td colspan="1">
            {{referral_date}}
          </td>
          <td style="text-align: center;">
            {{patient_id}}
          </td>
          <td style="text-align: center;">
            {{patient_name}}
          </td>
          <td style="text-align: center;">
            {{referral_type}}
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  {{else if is_by_staff}}
    <div class="invoice-box">
      <table cellpadding="0" cellspacing="0">
        <tr class="heading ">
          <td colspan="1" style="text-align: left;">
            Date
          </td>
          <td style="text-align: center;">
            Patient ID
          </td>
          <td style="text-align: center;">
            Patient
          </td>
        </tr>
        {{#each items}}
        <tr class="item">
          <td colspan="1">
            {{referral_date}}
          </td>
          <td style="text-align: center;">
            {{patient_id}}
          </td>
          <td style="text-align: center;">
            {{patient_name}}
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  {{else}}
  <div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
      <tr class="heading ">
        <td colspan="1" style="text-align: left;">
          Date
        </td>
        <td style="text-align: center;">
          Patient ID
        </td>
        <td style="text-align: center;">
          Patient
        </td>
        <td style="text-align: center;">
          Referrer
        </td>
        <td style="text-align: center;">
          Type
        </td>
      </tr>
      {{#each items}}
      <tr class="item">
        <td colspan="1">
          {{referral_date}}
        </td>
        <td style="text-align: center;">
          {{patient_id}}
        </td>
        <td style="text-align: center;">
          {{patient_name}}
        </td>
        <td style="text-align: center;">
          {{ref_name}}
        </td>
        <td style="text-align: center;">
          {{referral_type}}
        </td>
      </tr>
      {{/each}}
    </table>
  </div>
  {{/if}}
</body>

</html>